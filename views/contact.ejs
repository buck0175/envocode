  <div class="carousel-inner">
    <div class="carousel-item active">
      <picture>
        <source media="(min-width: 768px)" srcset="img/background4.png">
        <source media="(min-width: 414px)" srcset="img/slider-medium-contact.png">
        <img src="img/slider-small-contact.png" class="d-block" alt="Slider Image">
      </picture>
      <div class="carousel-caption d-none d-md-block carousel-portfolio">
